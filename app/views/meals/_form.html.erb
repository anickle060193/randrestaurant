<%= form_for @meal do |f| %>

  <%= render 'shared/errors', object: f.object %>

  <div class="form-group">
    <%= f.label :name, "Meal Name", class: "control-label", data: { required: true } %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :time, class: "control-label" %>
    <div class="input-group">
      <%= f.datetime_field :time, class: "form-control", step: 1 %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></span>
    </div>
  </div>

  <%= f.submit yield( :button_text ), class: "btn btn-primary btn-lg btn-block" %>

<% end %>