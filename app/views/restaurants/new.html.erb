<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <div class="page-header text-center">
      <h1>Add Restaurant</h1>
    </div>
      
    <%= form_for @restaurant, url: create_restaurant_path do |f| %>

      <%= render 'shared/errors', object: f.object %>
      
      <%= hidden_field_tag 'place_id', '', id: "restaurant-place-id" %>

      <input id="map-search" class="form-control" type="text" placeholder="Search Box">
    
      <div id="restaurant-map"></div>

      <div class="form-group">
        <%= f.label :name, "Restaurant Name", class: "control-label", data: { required: true } %>
        <%= f.text_field :name, class: "form-control", id: "restaurant-name" %>
      </div>

      <div class="form-group">
        <%= f.label :link, class: "control-label" %>
        <%= f.text_field :link, class: "form-control", id: "restaurant-link" %>
      </div>

      <%= f.submit "Add Restaurant", class: "btn btn-primary btn-lg btn-block" %>

    <% end %>

  </div>
  
  <div class="col-md-6">
  </div>

</div>