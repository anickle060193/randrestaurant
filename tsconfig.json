{
    "compilerOptions": {
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "app/assets/javascripts/generated",
        "watch": true,
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015.iterable"
        ]
    },
    "include": [
        "app/assets/javascripts/**/*"
    ],
    "explude": [
        "node_modules"
    ]
}